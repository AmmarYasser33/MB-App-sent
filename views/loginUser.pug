                    path(opacity="0.06", fill-rule="evenodd", clip-rule="evenodd", d="M8.07751 15.9175L13.9419 4.63989L16.5849 7.28475L8.07751 15.9175Z", fill="#161616")
                    path(fill-rule="evenodd", clip-rule="evenodd", d="M7.77295 16.3566L23.6563 0H32V6.88383C32 6.88383 31.8262 9.17836 30.6591 10.4057L19.7824 22H13.6938L7.77295 16.3566Z", fill="#00718a")
                span.app-brand-text.demo.text-body.fw-bold.ms-1 MB
                // /Logo
            h4.mb-1.pt-2 Two Step Verification ðŸ’¬
            p.text-start.mb-4
              | We sent a verification code to your mobile. Enter the code from
              | the mobile in the field below.
              span#showUserPhone.fw-bold.d-block.mt-2 ******XXXX
            p.mb-0.fw-semibold Type your 6 digit security code
            form#twoStepsForm()
              .mb-3
                .auth-input-wrapper.d-flex.align-items-center.justify-content-sm-between.numeral-mask-wrapper
                  input#digit-1.form-control.auth-input.h-px-50.text-center.numeral-mask.text-center.h-px-50.mx-1.my-2(type="text", maxlength="1", autofocus)
                  input#digit-2.form-control.auth-input.h-px-50.text-center.numeral-mask.text-center.h-px-50.mx-1.my-2(type="text", maxlength="1")
                  input#digit-3.form-control.auth-input.h-px-50.text-center.numeral-mask.text-center.h-px-50.mx-1.my-2(type="text", maxlength="1")
                  input#digit-4.form-control.auth-input.h-px-50.text-center.numeral-mask.text-center.h-px-50.mx-1.my-2(type="text", maxlength="1")
                  input#digit-5.form-control.auth-input.h-px-50.text-center.numeral-mask.text-center.h-px-50.mx-1.my-2(type="text", maxlength="1")
                  input#digit-6.form-control.auth-input.h-px-50.text-center.numeral-mask.text-center.h-px-50.mx-1.my-2(type="text", maxlength="1")
                // Create a hidden field which is combined by 3 fields above
                input(type="hidden", name="otp")
              button#verify-btn.btn.btn-primary.d-grid.w-100.mb-3(type="submit")
                | Login
              .text-center
                | Didn&apos;t get the code?
                a#resendBtn(href="#")  Resend 
            // / Two Steps Verification
            
    
