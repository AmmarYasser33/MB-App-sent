                  input#SARID.form-control(type="text", name="SARID",placeholder="0001", autofocus, required)
                  #recaptcha-container
                .mb-3
                  button#sign-in-button.btn.btn-primary.d-grid.w-100( type="submit")
                    | Send OTP
              // /Register

    #authentication-wrapper-basic.authentication-wrapper.authentication-basic.px-4
      .authentication-inner.py-4
        // Two Steps Verification
        .card
          .card-body
            // Logo
            .app-brand.justify-content-center.mb-4.mt-2
              a.app-brand-link.gap-2(href="index.html")
                span.app-brand-logo.demo
                  svg(width="32", height="22", viewBox="0 0 32 22", fill="none", xmlns="http://www.w3.org/2000/svg")
                    path(fill-rule="evenodd", clip-rule="evenodd", d="M0.00172773 0V6.85398C0.00172773 6.85398 -0.133178 9.01207 1.98092 10.8388L13.6912 21.9964L19.7809 21.9181L18.8042 9.88248L16.4951 7.17289L9.23799 0H0.00172773Z", fill="#00718a")
